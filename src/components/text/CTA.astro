---
export interface Props {
  type: 'button' | 'link' | 'link-2'
  text: string
  href?: string
  newWindow?: boolean
  class?: string
  id?: string
}

const { type, text, href, newWindow, class: className, id } = Astro.props
---

{
  type === 'link' ? (
    <a
      id={id}
      href={href}
      class={`${className} cta block max-w-fit px-[clamp(1rem,2vi,2rem)] py-[clamp(0.5rem,2vi,1rem)] text-base text-white hover:text-white bg-red-900 hover:bg-red-800 rounded-full shadow-sm transition`}
      target={newWindow ? '_blank' : '_self'}
      rel={newWindow ? 'noopener noreferrer' : ''}
      title={text}
      aria-label={text}
    >
      {text}
    </a>
  ) : type === 'button' ? (
    <button
      id={id}
      class={`${className} cta block max-w-fit px-[clamp(1rem,2vi,2rem)] py-[clamp(0.5rem,2vi,1rem)] text-base text-white hover:text-white bg-red-900 hover:bg-red-800 rounded-full shadow-sm transition`}
      title={text}
      aria-label={text}
    >
      {text}
    </button>
  ) : (
    <a
      id={id}
      href={`/blog/${href}/`}
      class={`${className} cta block max-w-fit px-[clamp(1rem,2vi,2rem)] py-[clamp(0.5rem,2vi,1rem)] text-base text-red-900 hover:text-white border hover:bg-red-900 rounded-full shadow-sm transition`}
      title={text}
      aria-label={text}
    >
      {text}
    </a>
  )
}
