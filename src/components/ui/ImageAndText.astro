---
/**
 * ImageAndText component
 *
 * Optional slot for additional content - CTA buttons, newsletter input, etc.
 */

import { Icon } from 'astro-icon/components'
import { Picture } from 'astro:assets'

export interface Props {
  image: ImageMetadata
  imageAlt: string
  title: string
  text: string
}

const { image, imageAlt, title, text } = Astro.props
---

<div
  class="max-w-xl md:max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-16 justify-items-center items-center"
>
  <Picture
    class="w-full drop-shadow-sm lsa lsa-slide-up no-repeat"
    src={image}
    loading="eager"
    alt={imageAlt}
  />
  <div class="flex flex-col items-center md:items-start gap-8 text-center md:text-left">
    <Icon name="zig-zag" class="w-16 lsa no-repeat" />
    <h2 class="lsa lsa-slide-up no-repeat" set:html={title} />
    <p class="lsa lsa-slide-up no-repeat delay-200" set:html={text} />
    <div class="lsa lsa-slide-up no-repeat delay-500">
      <slot />
    </div>
  </div>
</div>
