---
import { urlForImage } from '../../sanity/lib/urlForImage'

const { asset, alt } = Astro.props.node // `.node` is the current node in the PortableText

const url = urlForImage(asset).url()
const webpUrl = urlForImage(asset).format('webp').url()
---

<picture>
  <source srcset={webpUrl} type="image/webp" />
  <img class="aspect-square object-cover" src={url} alt={alt} />
</picture>
