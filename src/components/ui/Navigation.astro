---
import { Icon } from 'astro-icon/components'
---

<nav
  class="fixed left-1/2 right-1/2 -translate-x-1/2 w-[calc(100%-var(--site-padding)*2)] max-w-screen-2xl min-h-[var(--nav-height)] z-20 mt-[var(--site-padding)] px-8 py-2 flex items-center justify-between gap-4 bg-whiteTransparent backdrop-blur-md border rounded-full"
>
  <a href="/" title="Power Passenger Passage Home" aria-label="Power Passenger Passage Home">
    <Icon name="logo" class="size-20" />
  </a>

  <!-- TODO: build mobile navigation -->
  <button
    id="hamburger"
    class="relative z-10 flex md:hidden flex-col justify-center items-center size-8"
    aria-expanded="false"
    title="Menu"
    aria-label="Menu"
  >
    <span id="top" class="h-[2px] w-6 bg-black rounded-md transition duration-200 -translate-y-1">
    </span>
    <span id="bottom" class="h-[2px] w-6 bg-black rounded-md transition duration-200 translate-y-1">
    </span>
  </button>

  <ul class="hidden md:flex items-center gap-8">
    <li>
      <a href="/" title="Home" aria-label="Home">Home</a>
    </li>
    <li>
      <a href="/about" title="About" aria-label="About">About</a>
    </li>
    <li>
      <a href="/blog" title="Blog" aria-label="Blog">Blog</a>
    </li>
    <li>
      <a href="/contact" title="Contact" aria-label="Contact">Contact</a>
    </li>
    <li>
      <a
        href="https://www.instagram.com/erslifecoach/"
        target="_blank"
        rel="noopener noreferrer"
        title="Instagram"
        aria-label="Instagram"
      >
        <Icon name="tabler:brand-instagram" class="site-icon" />
      </a>
    </li>
    <li>
      <a
        href="mailto:emmie@erslifecoach.com"
        target="_blank"
        rel="noopener noreferrer"
        title="Email"
        aria-label="Email"
      >
        <Icon name="tabler:mail" class="site-icon" />
      </a>
    </li>
  </ul>
</nav>
